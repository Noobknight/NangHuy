<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/material_white"
        app:popupTheme="@style/Base.ThemeOverlay.AppCompat.ActionBar">

        <TextView
            android:id="@+id/activity_download_txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/btn_doc_download"
            android:textColor="@color/material_black"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/activity_download_btn_send_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#007AFF"
        android:text="@string/txt_send_mail"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:background="@drawable/selector_top_buttons"
        android:visibility="gone"
        />

    <GridView
        android:id="@+id/activity_download_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="16dp"
        android:verticalSpacing="16dp"
        android:layout_margin="8dp"
        android:numColumns="2">

    </GridView>


</LinearLayout>